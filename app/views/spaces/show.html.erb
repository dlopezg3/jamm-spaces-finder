<div class="banner banner-show" style="background-image: url('<%= image_url("flat.jpg") %>');">
  <div class="banner-content">
    <h1><%=@space.name %></h1>
  </div>
</div>

<div class="grid">

  <div class="map"
      id="map" style="width: 100%;"
      data-markers="<%= @markers.to_json %>">
  </div>
  <div class="description">

    <p>
      <strong>Address:</strong>
      <br>
      <%= @space.address %>
    </p>
    <p>
      <strong>Description:</strong>
      <br>
      <%= @space.description %>
    </p>
  </div>
  <div class="booking-form">
      <%= simple_form_for [@space, @booking] do |f| %>
        <%= f.input :start_time, as: :datetime, discard_minute: true, order: [:month, :day] %>
        <%= f.input :duration, input_html: { value: '1', min: '1', max: '3', step: 'any' }, label: 'Hours to book' %>
        <h3> Price per hour: <%= @space.price_per_hour.to_i  %>$ </h3>
        <%= f.submit "Book it", class: "btn btn-danger" %>
      <% end %>
  </div>
</div>
